<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_white"
    tools:context=".activities.Wallet.WalletActivity">

    <include
        android:id="@+id/header"
        layout="@layout/app_header_general"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header">
        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center|bottom"
            android:orientation="horizontal"
            android:background="@drawable/bg_round_blue">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="bottom|center_horizontal"
               android:weightSum="2"
               android:layout_marginBottom="15dp"
               android:orientation="horizontal">

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   android:gravity="right">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="16sp"
                           android:fontFamily="@font/fira_sans_extra_bold"
                           android:text="€"
                           android:layout_marginRight="5dp"
                           android:textColor="@color/white">
                       </TextView>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="20sp"
                           android:fontFamily="@font/fira_sans_extra_bold"
                           android:text="0.00"
                           android:textColor="@color/white">

                       </TextView>
                   </LinearLayout>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="16sp"
                       android:fontFamily="@font/fira_sans_regular"
                       android:text="Spent"
                       android:textColor="@color/white">

                   </TextView>
               </LinearLayout>
               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/black"
                   android:layout_marginHorizontal="40dp"
                   android:alpha="0.1"/>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   android:gravity="left">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="16sp"
                           android:fontFamily="@font/fira_sans_extra_bold"
                           android:text="€"
                           android:layout_marginRight="5dp"
                           android:textColor="@color/white">
                       </TextView>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="20sp"
                           android:fontFamily="@font/fira_sans_extra_bold"
                           android:text="0.00"
                           android:textColor="@color/white">

                       </TextView>
                   </LinearLayout>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="16sp"
                       android:fontFamily="@font/fira_sans_regular"
                       android:text="History"
                       android:textColor="@color/white">

                   </TextView>
               </LinearLayout>

           </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/bg_round_white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:fontFamily="@font/fira_sans_extra_bold"
                android:text="€"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorSecond">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:fontFamily="@font/fira_sans_extra_bold"
                android:text="0.00"
                android:textColor="@color/black">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ll_2"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Transaction"
                android:textColor="@color/black"
                android:fontFamily="@font/fira_sans_extra_bold"
                android:textSize="18sp"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="View All"
                android:textColor="@color/colorSecond"
                android:fontFamily="@font/fira_sans_extra_bold"
                android:textSize="18sp"
                android:gravity="center_vertical|right"/>
        </LinearLayout>
        <View
            android:id="@+id/view_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_below="@+id/ll_3"
            android:layout_marginHorizontal="20dp"
            android:alpha="0.1"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_transactions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view_2"
            android:visibility="visible"
            tools:listitem="@layout/item_transaction">

        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_2"
            android:text="None"
            android:visibility="gone"
            android:textSize="24sp"
            android:fontFamily="@font/fira_sans_extra_bold"
            android:textColor="@color/grey_light"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp">

        </TextView>
    </RelativeLayout>


    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        card_view:cardBackgroundColor="@color/colorSecond"
        card_view:cardCornerRadius="30dp"
        android:layout_marginTop="10dp"
        card_view:cardElevation="4dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="50dp">
        <Button
            android:id="@+id/btn_recharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Recharge"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/bg_btn_orange"
            android:elevation="4dp" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>