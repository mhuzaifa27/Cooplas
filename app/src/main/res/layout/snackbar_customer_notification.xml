<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_customer_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="50dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sorry, this ride has been cancelled by the driver because you did not appear at the designated location. You will be charged"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:fontFamily="@font/fira_sans_bold"/>

        <LinearLayout
            android:id="@+id/ll_btns_accept_ignore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_message"
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_accept_ride"
                style="@style/ButtonStyleOrange"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Booka again"
                android:textAllCaps="false"></Button>
            <Button
                android:id="@+id/btn_ignore_ride"
                style="@style/ButtonStyleGrey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Ignore"
                android:textAllCaps="false"></Button>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>


