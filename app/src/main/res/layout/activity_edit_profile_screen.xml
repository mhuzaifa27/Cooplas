<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".activities.EditProfileScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cooplas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="CooPlas"
                android:textColor="@color/white"
                android:textSize="60sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp" />

            <TextView
                android:id="@+id/tv_verification_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:text="Edit Profile"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="27dp"
                android:paddingEnd="27dp"
                android:paddingTop="44dp"
                android:paddingBottom="44dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_white"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/profile_icon"
                    app:civ_border_color="@color/colorSecond"
                    app:civ_border_width="2dp"/>

                <ImageView
                    android:id="@+id/iv_camera"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-20dp"
                    android:layout_width="30dp"
                    android:src="@drawable/camera_icon"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="I'm a"
                    android:textColor="@color/grey"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_marginTop="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_female"
                        android:layout_width="116dp"
                        android:layout_height="41dp"
                        android:background="@drawable/round_grey">

                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_female"
                                android:layout_width="17dp"
                                android:layout_height="12dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/female"/>
                            <TextView
                                android:id="@+id/tv_female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@id/iv_female"
                                android:text="Female"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_centerInParent="true"
                        android:text="OR"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/rl_male"
                        android:layout_width="116dp"
                        android:layout_height="41dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/round_grey">

                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_male"
                                android:layout_width="27dp"
                                android:layout_height="8dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/male"/>
                            <TextView
                                android:id="@+id/tv_male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@id/iv_male"
                                android:text="Male"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <EditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:hint="First Name"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:textColorHint="@color/grey_light" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey_light"/>
                <EditText
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/black"
                    android:hint="Last Name"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:textColorHint="@color/grey_light" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey_light"/>
                <EditText
                    android:id="@+id/et_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/black"
                    android:hint="User Name"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:textColorHint="@color/grey_light" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey_light"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_save"
                android:layout_width="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/round_orange"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="14dp"
                    android:layout_centerInParent="true"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:layout_gravity="end"
                    android:textSize="16sp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>