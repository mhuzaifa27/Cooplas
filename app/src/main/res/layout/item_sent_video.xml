<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    android:weightSum="3"
    android:gravity="right">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingVertical="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="50dp"
                android:orientation="vertical"
                android:layout_alignParentStart="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="10dp">
                    <RelativeLayout
                        android:id="@+id/rl_video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.joooonho.SelectableRoundedImageView
                            android:id="@+id/first_image_view"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/feedImageHeight"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile_1"
                            app:sriv_right_top_corner_radius="10dp"
                            app:sriv_left_bottom_corner_radius="10dp"
                            app:sriv_left_top_corner_radius="10dp"
                            app:sriv_right_bottom_corner_radius="10dp"
                            app:sriv_border_color="@color/colorPrimaryDark"
                            app:sriv_border_width="2dp"/>

                        <ImageView
                            android:id="@+id/img_play"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_play" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/tv_time_ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="bottom|right"
                    android:layout_below="@+id/card_audio"
                    android:fontFamily="@font/fira_sans_extra_bold_italic"
                    android:text="11:48 PM"
                    android:layout_marginBottom="5dp"
                    android:layout_toLeftOf="@+id/rl_ticks"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"/>

                <RelativeLayout
                    android:id="@+id/rl_ticks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_audio"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="30dp">
                    <ImageView
                        android:id="@+id/img_seen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_message_seen"
                        app:tint="@color/colorPrimary"
                        android:visibility="gone">

                    </ImageView>
                    <ImageView
                        android:id="@+id/img_single_tick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_single_tick"
                        app:tint="@color/black"
                        android:visibility="visible">
                    </ImageView>
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>