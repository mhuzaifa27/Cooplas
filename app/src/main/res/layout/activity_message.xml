    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_type_message"
        android:layout_below="@+id/header"
        android:background="@color/white"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/message_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="15"
                tools:listitem="@layout/item_sent_message" />
        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ImageView
        android:id="@+id/big_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:onClick="onClick"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_type_message"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginHorizontal="15dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:background="@drawable/round_primary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/selection_chat_btn">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_write_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_add"
                app:civ_border_width="2dp"
                android:layout_marginVertical="5dp"
                app:civ_border_color="@color/colorSecond" />

            <EditText
                android:id="@+id/message_edittiext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_centerVertical="true"
                android:hint="I am writing something..."
                android:layout_toEndOf="@id/iv_write_comment"
                android:layout_marginStart="2dp"
                android:textColor="@color/black"
                android:fontFamily="@font/fira_sans_italic"
                android:textSize="16sp"
                android:layout_toStartOf="@+id/selection_img_btn" />
            <ImageView
                android:id="@+id/selection_img_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_camera"
                android:onClick="onClick"
                android:layout_marginRight="5dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/selection_chat_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:onClick="onClick"
            android:layout_centerVertical="true"
            android:src="@drawable/send_icon"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</RelativeLayout>