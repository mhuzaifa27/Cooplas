<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/verificationbg"
    tools:context=".signup_screens.PhoneVerificatoinScreen">

    <TextView
        android:id="@+id/tv_cooplas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="CooPlas"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_verification_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cooplas"
        android:layout_centerHorizontal="true"
        android:text="Verification Code"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_verification_code"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/et_one"
            android:layout_width="@dimen/code_input_width"
            android:layout_height="@dimen/code_input_height"
            android:layout_centerInParent="true"
            android:background="@drawable/round_orange_2"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"

            android:textColor="@color/white"
            android:textSize="@dimen/code_input_textSize" />

        <EditText
            android:id="@+id/et_two"
            android:layout_width="@dimen/code_input_width"
            android:layout_height="@dimen/code_input_height"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_orange_2"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="@dimen/code_input_textSize" />

        <EditText
            android:id="@+id/et_three"
            android:layout_width="@dimen/code_input_width"
            android:layout_height="@dimen/code_input_height"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_orange_2"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="@dimen/code_input_textSize" />

        <EditText
            android:id="@+id/et_four"
            android:layout_width="@dimen/code_input_width"
            android:layout_height="@dimen/code_input_height"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_orange_2"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="@dimen/code_input_textSize" />


        <EditText
            android:id="@+id/et_five"
            android:layout_width="42dp"
            android:layout_height="@dimen/code_input_height"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_orange_2"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="@dimen/code_input_textSize" />

        <EditText
            android:id="@+id/et_six"
            android:layout_width="@dimen/code_input_width"
            android:layout_height="@dimen/code_input_height"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_orange_2"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="@dimen/code_input_textSize" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_otp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="A verification code has been sent to\nyou phone number. Please input code\nto continue."
        android:textColor="#0092FF"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_resend"
        android:layout_centerInParent="true"

        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_next"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/resend_otp"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_next"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/round_orange">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="end"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>